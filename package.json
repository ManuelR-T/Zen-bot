{
  "name": "zen_bot",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "bunx tsc",
    "start": "bun dist/index.js",
    "clean": "rm -fR ./dist",
    "rebuild": "rm -fR ./dist; tsc && bun dist/index.js",
    "db:check": "prisma studio",
    "db:start": "docker-compose up -d mongodb",
    "db:stop": "docker-compose down -v",
    "db:update": "prisma generate",
    "dev": "bun --watch src/index.ts",
    "commands:update": "bun ./src/deploy-commands.ts",
    "lint": "bunx eslint --config config/.eslintrc.yml --ignore-path config/.eslintignore --ext .ts .",
    "lint:fix": "bunx eslint --config config/.eslintrc.yml --ignore-path config/.eslintignore --ext .ts . --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@discordjs/rest": "^2.0.1",
    "@prisma/client": "^5.4.2",
    "axios": "^1.5.1",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "discord.js": "^14.13.0",
    "node-cron": "^3.0.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node-cron": "^3.0.8",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "^6.5.0",
    "bun-types": "^1.0.1",
    "discord-api-types": "^0.37.56",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-prettier": "latest",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.0.3",
    "prisma": "^5.4.2",
    "typescript": "^5.2.2"
  }
}
